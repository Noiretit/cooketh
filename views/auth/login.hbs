<h2> Log In </h2>

{{#if errorMessage}}
<p class="error-message">
  {{ errorMessage }}
</p>
{{/if}}

<form action="/login" method="post">
  <input type="checkbox" value="isAChef" name="isAChef" id="isAChef">
  <label for="isAChef">I'm a cook</label>

  <div>
    <label for="email-input"> Email </label>
    <input type="email" name="email" id="email-input" placeholder="e.g., xena@warrior.company">
  </div>

  <div>
    <label for="password-input"> Password </label>
    <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
  </div>

  <button> Log In </button>
</form>

<p>
  Don't have an account?
<p>
  <a href="/signup-chef">
    Sign up as a chef
  </a><br>
  <a href="/signup-user">
    Sign up as a user
  </a>
</p>
<div class="container-pages">
    <h2 class="all-page-titles">All recipes</h2>
    <hr>

    <div class="container-recipes">
        {{#each recipes}}
        <div class="ideas-recipes">

            <img class="img-recipe" src="{{this.imgPath}}">
            <hr>
            <div>
                <h2 class="info-recipe-title">{{this.title}}</h2>
                <div class="info-recipe">
                    <p>Price:<br> {{this.price}}â‚¬/serve</p>
                    <p>Type of food:<br> {{this.typeOfFood}}</p>
                    <p>Description:<br> {{this.description}}</p>
                </div>
                <div class="info-cooker">
                    <img class="pic-cooker-list-recipe" src={{this.chef.picture}}>
                    <p style="margin: 0;">Cooker:<br> {{this.chef.name}}</p>
                    <a href="/profile-chef/{{this.chef._id}}">View profile</a>
                </div>
            </div>

            <button class="allButtons" type="button"><a style="color: white;" href="/recipes/{{this.id}}">Book
                    it!</a></button>

        </div>
        {{else}}
        <p>There is no recipe yet</p>
        {{/each}}
    </div>
</div>
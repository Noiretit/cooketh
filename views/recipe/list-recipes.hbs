<div class="container-pages">
    <h2 class="all-page-titles">All recipes</h2>
    <hr>

    <div class="idea-recipes">
        {{#each recipes}}
        <div class="recipes">

            <img class="img-recipe" src="{{this.imgPath}}">
            <hr>
            <div class="container-info">
                <div class="info-recipe">
                    <p>{{this.title}}</p>
                    <p>Price: {{this.price}}â‚¬/serve</p>
                    <p>Type of food: {{this.typeOfFood}}</p>
                    <p>Description: {{this.description}}</p>
                </div>
                <div class="info-cooker">
                    <img class="pic-cooker-list-recipe" src={{this.chef.picture}}>
                    <p>Cooker: {{this.chef.name}}</p>
                </div>
            </div>

            <button class="allButtons" type="button"><a style="color: white;" href="/recipes/{{this.id}}">Book
                    it!</a></button>

        </div>
        {{else}}
        <p>There is no recipe yet</p>
        {{/each}}
    </div>
</div>